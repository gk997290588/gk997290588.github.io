    boolean visitCompany = false
    boolean visitUniversity = false
    boolean visitBakery = false
]

declare action preCompanyAction = goto company
declare action afterCompanyAction = goto bakerySelection
section start then selection [
    choice "先去大学实验室交作业！" goto university
    choice "先去找老爹商量量产！" goto company
