section university {
    visitUniversity = true
} then visitCompany == true ? (visitBakery == true ? goto afterUniversity : goto bakerySelection) : goto preCompany
section afterUniversity then goto breadIsDelicious
section preCompany {
    preCompanyAction = visitCompany == true ? goto breadIsDelicious : goto company 
} then preCompanyAction
section company {
    visitCompany = true
} then goto afterCompany
section afterCompany { 
   afterCompanyAction = visitUniversity == true ? (visitBakery == true ? goto breadIsDelicious : goto bakerySelection) : goto preBakerySelection
} then afterCompanyAction
section preBakerySelection then selection [
    choice "去面包房吧！毕竟是限定款面包！" goto preBakery
    choice "先去实验室交作业！" goto university
]
section bakerySelection then selection[
    choice "去面包房吧！" goto bakery
    choice "相信自己！让妹妹尝尝我的手艺！" goto cook
]

section preBakery {
    visitBakery = true
} then goto university

section bakery then goto kyogenNeedsPunishment
section cook then goto kyogenNeedsPunishment
section kyogenNeedsPunishment then exit
section breadIsDelicious then exit
